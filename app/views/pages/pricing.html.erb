<!-- Email collection modal -->
<div class="modal fade bs-modal-sm" id="JS-email-collection-modal" tabindex="-1" role="dialog" aria-labelledby="emailCollection" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content text-center">
      <div class="modal-body">

        <%= form_tag thanks_path, id: 'JS-email-collection-modal-form', class: 'form-inline' do%>
          <p>What is your e-mail address?</p>
          <div class="form-group text-center">
