<div class='container-fluid'>

  <div id="call-to-action-banner" class='row text-center'>
    <div class="col-md-12">
      <h3><strong>Understand</strong> your finances.</h3>
      <a href="<%= sign_up_path %>" type="button" class="btn btn-lg btn-footer-cta"><strong>Register for Free</strong></a>
    </div>
  </div>

  <div id="main-footer-section" class='row text-center'>
    <div class="col-md-4" id='contact-scroll'>
      <h3>Contact Us</h3>
      <p>
        <i class="fa fa-map-marker"></i> Calgary AB, Canada <br/>
        <% if ENV['AUTHOR_PHONE'].present? %>
          <i class="fa fa-phone"></i>&nbsp;<%= ENV['AUTHOR_PHONE'] %><br/>
        <% end %>
        <i class="fa fa-envelope-o"></i> <a class='email-link underlined' href="mailto:<%= ENV['AUTHOR_EMAIL'] %>?subject=<%= ENV['AUTHOR_EMAIL_CONTACT_SUBJECT'] %>"><%= ENV['AUTHOR_EMAIL'] %></a>
      </p>
    </div>

    <div class="col-md-4">
      <h3>We Are Social</h3>
      <p id='social-links'>
        <% if ENV['AUTHOR_FACEBOOK'].present? %>
          <a id='facebook-profile-link' href="http://www.facebook.com/<%= ENV['AUTHOR_FACEBOOK'] %>" target="_blank"><i class="fa fa-facebook fa-lg"></i></a>
        <% end %>
        <% if ENV['AUTHOR_TWITTER'].present? %>
          <a id='twitter-profile-link' href="https://twitter.com/intent/user?screen_name=<%= ENV['AUTHOR_TWITTER'] %>" target="_blank"><i class="fa fa-twitter fa-lg"></i></a>
        <% end %>
        <% if ENV['COMPANY_LINKEDIN'].present? %>
          <a id='linkedin-profile-link' href="https://www.linkedin.com/company/<%= ENV['COMPANY_LINKEDIN'] %>" target="_blank"><i class="fa fa-linkedin fa-lg"></i></a>
        <% end %>
        <% if ENV['AUTHOR_GOOGLEPLUS'].present? %>
          <a id='googleplus-profile-link' href="https://plus.google.com/<%= ENV['AUTHOR_GOOGLEPLUS'] %>/" target='_blank'><i class="fa fa-google-plus fa-lg"></i></a>
        <% end %>
        <a id='rss-link' href="<%= posts_feed_path %>" target='_blank'><i class="fa fa-rss fa-lg"></i></a>
        <% if ENV['AUTHOR_EMAIL'].present? %>
          <a class='email-link' href="mailto:<%= ENV['AUTHOR_EMAIL'] %>?subject=<%= ENV['AUTHOR_EMAIL_CONTACT_SUBJECT'] %>"><i class="fa fa-envelope fa-lg"></i></a>
        <% end %>
      </p>
    </div>

    <div class="col-md-4">
      <h3>Newsletter</h3>
      <p id='newsletter-text'>Subscribe to our newsletter and be the first to know our latest updates.</p>
      <%= render partial: 'shared/newsletter_form' %>
    </div>
  </div><!--/ #main-footer-section -->

  <div id="copyright-links" class='row'>
    <div class="col-md-7">
      <p class='copyright-test'>Copyright &copy;2012-2014 <a href="<%= root_path %>" alt="RetirementPlan.io Copyright">RetirementPlan.io</a>. All Rights Reserved.</p>
    </div>
    <div class="col-md-5" id='footer-links'>
      <p>
        <%= link_to "Blog", posts_path %> |
        <%= link_to "About", about_path %> |
        <%= link_to "Terms", terms_path %> |
        <%= link_to "Privacy", privacy_path %> |
        <%= link_to "Disclosures", disclosures_path %> |
        <%= link_to "Sitemap", sitemap_path %>
      </p>
    </div>
  </div>

</div> <!-- container-fluid -->
